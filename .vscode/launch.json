{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "SDF Samples Analytical",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_process/SDF_samples_analytical.py",
            "args": [
            "${workspaceFolder}/data",
            "--urdf-dir", "${workspaceFolder}/data/out_chains_v2",
            "--dest", "${workspaceFolder}/data/chain_samples_v2",
            "--n-samples", "275000",
            "--n-configs", "100",
            "--near-surface-ratio", "0.95",
            "--var", "0.0025",
            "--batch-size", "100",
            "--device", "cuda",
            "--max-chains", "-1"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "SDF Samples",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_process/SDF_samples.py",
            "args": [
            "${workspaceFolder}/data",
            "--nproc",
            "0",
            "--overwrite",
            "--max-instances",
            "-1",
            "--debug",
            "--visualize"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Visualize Samples",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_process/visualize_samples.py",
            "console": "integratedTerminal",
            "args": [
                "--mesh", "data/chain_meshes/chain_0_0.obj",
                "--samples", "data/chain_samples/chain_0_0/deepsdf.npz",
                // "--surface", "data/chain_samples/chain_0_0/surface.npy",
                "--downsample", "0.002",
                "--max-points", "50000",
                "--marker-size", "3"
            ]
        },
        {
            "name": "Train_fk",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_fk.py",
            "console": "integratedTerminal",
            "env": {
                "WANDB_MODE": "disabled"
            }
        },
        {
            "name": "Train_ik",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_ik.py",
            "console": "integratedTerminal",
            "env": {
                "WANDB_MODE": "disabled"
            }
        },
        {
            "name": "Process SDF",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/process_sdf.py",
            "console": "integratedTerminal",
            "args": [
                "--config", "conf/config.yaml",
                "--checkpoint", "${workspaceFolder}/checkpoints/sdf-transformer_norm/epoch_300.pt",
                "--save_dir", "${workspaceFolder}/data/sdf_tokens",
                "--device", "cuda",
                "--num_workers", "4",
                "--batch_size", "32"
            ]
        }
    ]
}